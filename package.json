  "dependencies": {
    "@nearform/nf-present": "^2.0.0",
    "@nearform/sql": "^1.9.0",
    "desm": "^1.2.0",
    "env-schema": "^3.5.0",
    "fastify": "^3.24.1",
    "fastify-autoload": "^3.9.0",
    "fastify-jwt": "^4.0.1",
    "fastify-postgres": "^3.6.0",
    "fluent-json-schema": "^3.0.1",
    "http-errors": "^1.8.1",
    "pg": "^8.7.1",
    "pino-pretty": "^7.2.0"
  },
  "devDependencies": {
    "@istanbuljs/esm-loader-hook": "^0.1.2",
    "eslint": "^8.4.0",
    "eslint-plugin-sql": "^2.0.0",
    "postgrator-cli": "^4.0.0",
    "prettier": "^2.5.1",
    "sinon": "^12.0.1",
    "tap": "^15.1.5"
  },
  "tap": {
    "node-arg": [
      "--no-warnings",
      "--experimental-loader",
      "@istanbuljs/esm-loader-hook"
    ]
  }
