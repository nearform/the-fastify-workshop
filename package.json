    "desm": "^1.3.0",
    "env-schema": "^5.2.0",
    "fastify": "^4.24.3",
    "fluent-json-schema": "^4.1.2",
    "http-errors": "^2.0.0",
    "pg": "^8.11.3",
    "pino-pretty": "^10.2.0",
    "slidev-theme-nearform": "^1.5.5"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
