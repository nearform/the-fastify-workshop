  "dependencies": {
    "@nearform/nf-present": "^2.0.0",
    "@nearform/sql": "^1.9.0",
    "@sinclair/typebox": "^0.23.3",
    "desm": "^1.2.0",
    "env-schema": "^3.5.2",
    "fastify": "^3.27.0",
    "fastify-autoload": "^3.10.0",
    "fastify-jwt": "^4.1.3",
    "fastify-postgres": "^3.6.0",
    "fluent-json-schema": "^3.0.1",
    "http-errors": "^2.0.0",
    "pg": "^8.7.1",
    "pino-pretty": "^7.5.1"
  },
  "devDependencies": {
    "@istanbuljs/esm-loader-hook": "^0.1.2",
    "@tsconfig/node16": "^1.0.2",
    "@types/http-errors": "^1.8.2",
    "@types/node": "^17.0.13",
    "@types/sinon": "^10.0.9",
    "@types/tap": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-plugin-sql": "^2.1.0",
    "postgrator-cli": "^4.0.0",
    "prettier": "^2.5.1",
    "sinon": "^13.0.0",
    "tap": "^15.1.6",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "tap": {
    "node-arg": [
      "--no-warnings"
    ]
  }
