{
  "name": "the-fastify-workshop",
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "version": "1.0.0",
  "license": "CC-BY-SA-4.0",
  "author": "Simone Busoli <simone.busoli@nearform.com>",
  "scripts": {
    "start": "nf-present deck.md --css=./styles.css --out=index.html --watch",
